    <developers>
        <developer>
            <name>Digdir</name>
            <email>servicedesk@digdir.no</email>
            <organization>Digdir</organization>
            <organizationUrl>https://www.digdir.no</organizationUrl>
        </developer>
    </developers>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>MavenArtifactFeed</id>
            <url>https://pkgs.dev.azure.com/dificloud/_packaging/MavenArtifactFeed/maven/v1</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>Jsch</id>
            <url>http://jsch.sf.net/maven2/</url>
        </repository>
    </repositories>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <spring.cloud.version>2021.0.8</spring.cloud.version>
        <commons-lang.version>3.12.0</commons-lang.version>
        <xmlsec.version>3.0.1</xmlsec.version>
        <nimbus.jwt.version>9.31</nimbus.jwt.version>
        <guava.version>32.1.3-jre</guava.version>
        <xstream.version>1.4.20</xstream.version>
        <bouncycastle.version>1.76</bouncycastle.version>
        <commons-asic.version>0.12.0</commons-asic.version>
        <spring-security-oauth.version>2.5.2.RELEASE</spring-security-oauth.version>
        <snakeyaml.version>2.2</snakeyaml.version>
    </properties>

    <modules>
        <module>audit</module>
        <module>cloud</module>
        <module>config</module>
        <module>security</module>
        <module>webservice-tools</module>
        <module>annotation</module>
        <module>domain</module>
        <module>validation</module>
        <module>io</module>
        <module>certvalidator</module>
        <module>properties</module>
        <module>persistence</module>
        <module>spring-converter</module>
        <module>ad</module>
    </modules>

